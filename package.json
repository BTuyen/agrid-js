{
    "name": "@agrid-js/core",
    "version": "1.5.3",
    "description": "Agrid JS core package - Monorepo containing multiple Agrid JavaScript SDKs",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "author": "BTuyen",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/BTuyen/agrid-js.git"
    },
    "publishConfig": {
        "access": "public"
    },
    "packageManager": "pnpm@10.12.4",
    "scripts": {
        "build": "turbo --filter=@agrid/core build && npm run copy-dist",
        "copy-dist": "mkdir -p dist && cp -r packages/core/dist/* dist/",
        "prepublishOnly": "npm run build",
        "build-rollup": "pnpm --filter=@agrid/browser build-rollup",
        "clean": "turbo clean",
        "clean:dep": "rm -rf node_modules && pnpm -r exec rm -rf node_modules",
        "lint": "turbo lint",
        "lint:fix": "turbo lint:fix",
        "test": "turbo test",
        "test:unit": "turbo test:unit",
        "test:functional": "turbo test:functional",
        "test:e2e": "turbo test:e2e",
        "dev": "turbo dev",
        "package": "export PACKAGE_DEST=$(pwd)/target && turbo package",
        "package:watch": "export PACKAGE_DEST=$(pwd)/target && turbo watch package",
        "generate-references": "turbo @agrid/browser#generate-references @agrid/node#generate-references @agrid/react-native#generate-references"
    },
    "pnpm": {
        "patchedDependencies": {
            "@rrweb/rrweb-plugin-console-record@2.0.0-alpha.17": "patches/@rrweb__rrweb-plugin-console-record@2.0.0-alpha.17.patch",
            "@rrweb/record@2.0.0-alpha.17": "patches/@rrweb__record@2.0.0-alpha.17.patch"
        }
    },
    "devDependencies": {
        "@changesets/changelog-github": "^0.5.1",
        "@changesets/cli": "^2.29.5",
        "@microsoft/api-extractor": "^7.47.9",
        "@microsoft/api-extractor-model": "^7.29.8",
        "@microsoft/tsdoc": "^0.15.1",
        "@rollup/plugin-commonjs": "^29.0.0",
        "@rollup/plugin-typescript": "^12.3.0",
        "@rslib/core": "0.17.1",
        "@types/eslint": "^8.44.6",
        "@types/jest": "^28.1.5",
        "@types/node": "^22.17.0",
        "@typescript-eslint/eslint-plugin": "^8.29.1",
        "@typescript-eslint/parser": "^8.29.1",
        "eslint": "8.57.0",
        "eslint-config-posthog-js": "workspace:./tooling/eslint-plugin-posthog-js",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-compat": "^6.0.1",
        "eslint-plugin-jest": "^28.8.3",
        "eslint-plugin-no-only-tests": "^3.1.0",
        "eslint-plugin-posthog-js": "workspace:./tooling/eslint-plugin-posthog-js",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-react": "^7.30.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "lint-staged": "^10.2.11",
        "prettier": "^3.4.2",
        "rimraf": "^6.0.1",
        "rollup": "catalog:",
        "rollup-plugin-copy": "^3.5.0",
        "ts-node": "^10.9.1",
        "turbo": "^2.5.4",
        "typescript": "catalog:"
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx,mjs,cjs}": [
            "eslint --cache --fix",
            "prettier --write"
        ],
        "*.{json,md}": "prettier --write"
    },
    "engines": {
        "node": ">=20",
        "pnpm": ">=8"
    },
    "optionalDependencies": {
        "@oxc-parser/binding-darwin-arm64": "^0.96.0"
    }
}
